#ifndef INC_UTILS_H_
#define INC_UTILS_H_

void display_board_information()
{
	if (VERBOSE)
	{
		printf("Board Id:\t\t\t%d\r\n", (int)HAL_GetDEVID());
		printf("Board Freq:\t\t\t%d\r\n", (int)HAL_RCC_GetHCLKFreq());
	}
}
#endif /* INC_UTILS_H_ */
