#include "nucleo_stm32f767xx_timer.h"


void timer_Init()
{
	htimer6.Instance = TIM6;

	htimer6.Init.Prescaler 			= 108000000 - 1;
	htimer6.Init.Period 			= 999 - 1;

	HAL_TIM_Base_Init(&htimer6);

}

void timer_start(void)
{
	HAL_TIM_Base_Start_IT(&htimer6);


}
